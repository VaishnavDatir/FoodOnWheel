<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:id="@+id/llContent_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:padding="3dp">

        <ImageView
            android:id="@+id/imgRestImage_home"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_weight="1.5"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3">

            <TextView
                android:id="@+id/txtRestName_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:padding="8dp"
                android:text="Hotel Name"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtRestPrice_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableStart="@drawable/currency_inr"
                android:fontFamily="@font/rubik"
                android:padding="8dp"
                android:text="222"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/txtRestPrice_home"
                android:fontFamily="@font/rubik"
                android:paddingBottom="8dp"
                android:text="/person"
                android:textSize="20sp"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <ImageView
                android:id="@+id/imgIsFav_home"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:clickable="true"
                android:src="@drawable/ic_fav_not"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/txtRestRating_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableStart="@drawable/ic_rating"
                android:drawablePadding="3dp"
                android:drawableTint="@color/colorRating"
                android:padding="8dp"
                android:text="4.2"
                android:textColor="@color/colorRating"
                android:textSize="18dp" />

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>